<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:textColor">@color/buttonForeground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">showToast</item>
    </style>

    <style name="ButtonSpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_space</item>
    </style>

</resources>
